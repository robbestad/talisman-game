{
  "name": "sdrive-api-gateway",
  "scripts": {
    "dev": "DEBUG=server,auth API_HOST=127.0.0.1 REDIS_HOST=127.0.0.1 NODE_ENV=development nodemon server.js",
    "up": "pm2 start ecosystem.config.cjs --env production",
    "restart": "pm2 restart ecosystem.config.cjs --env production",
    "down": "pm2 stop ecosystem.config.cjs",
    "kill": "pm2 stop ecosystem.config.cjs && pm2 delete downloader",
    "start": "NODE_ENV=production node server.js"
  },
  "type": "module",
  "dependencies": {
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.1",
    "http-proxy-middleware": "^2.0.6",
    "nodemon": "^2.0.21",
    "redis": "^4.5.1",
    "response-time": "^2.3.2",
    "sqlite-async": "^1.2.0",
    "winston": "^3.8.2"
  }
}
